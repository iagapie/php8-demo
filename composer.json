{
    "name": "iagapie/php8-demo",
    "description": "PHP8 Demo App",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Agapie",
            "email": "igoragapie@gmail.com"
        }
    ],
    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/iagapie/migrations"
    }],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "doctrine/migrations": "3.1.x-dev",
        "iagapie/cookie-jar": "^1.0",
        "iagapie/fast-route-attribute": "^1.0",
        "laminas/laminas-httphandlerrunner": "^1.3",
        "monolog/monolog": "^2.2",
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "symfony/config": "^5.2",
        "symfony/console": "^5.2",
        "symfony/dependency-injection": "^5.2",
        "symfony/dotenv": "^5.2",
        "symfony/event-dispatcher": "^5.2",
        "symfony/finder": "^5.2",
        "symfony/http-foundation": "^5.2",
        "symfony/stopwatch": "^5.2",
        "symfony/yaml": "^5.2",
        "twig/twig": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
